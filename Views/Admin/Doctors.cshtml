@model IEnumerable<ClinicAppointmentSystemApp.Models.Doctor>

@{
    ViewData["Title"] = "Manage Doctors";
}

<div class="container mt-4">
    <h2>Manage Doctors</h2>
    <hr>
    <a href="@Url.Action("AddDoctor", "Admin")" class="btn btn-primary mb-3">Add New Doctor</a>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Doctor Name</th>
                <th>Specialty</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doctor in Model)
            {
                <tr>
                    <td>@doctor.DoctorName</td>
                    <td>@doctor.Specialty</td>
                    <td>
                        <a href="@Url.Action("EditDoctor", "Admin", new { id = doctor.DoctorId })" class="btn btn-warning">Edit</a>
                        <form asp-action="DeleteDoctor" asp-route-id="@doctor.DoctorId" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
