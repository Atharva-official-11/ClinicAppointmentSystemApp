@model ClinicAppointmentSystemApp.Models.Doctor

@{
    ViewData["Title"] = "Add Doctor";
}

<div class="container">
    <h1 class="text-center text-primary mb-4">Add a New Doctor</h1>

    <div class="card shadow-lg p-4">
        <div class="card-body">
            <h4 class="text-secondary">Doctor Information</h4>
            <hr />

            <form asp-action="AddDoctor">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Doctor Name -->
                <div class="mb-3">
                    <label asp-for="DoctorName" class="form-label fw-bold text-dark"></label>
                    <input asp-for="DoctorName" class="form-control" placeholder="Enter doctor's name" />
                    <span asp-validation-for="DoctorName" class="text-danger"></span>
                </div>

                <!-- Specialty -->
                <div class="mb-3">
                    <label asp-for="Specialty" class="form-label fw-bold text-dark"></label>
                    <input asp-for="Specialty" class="form-control" placeholder="Enter specialty (e.g., Cardiology)" />
                    <span asp-validation-for="Specialty" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-flex justify-content-between">
                    <a asp-action="GetDoctors" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-lg"></i> Add Doctor
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

















