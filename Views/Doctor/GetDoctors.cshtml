@model IEnumerable<ClinicAppointmentSystemApp.Models.Doctor>

@{
    ViewData["Title"] = "Doctors List";
}

<h1 class="text-center text-primary mb-4">Doctors List</h1>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="AddDoctor" class="btn btn-success">
        <i class="bi bi-plus-lg"></i> Add New Doctor
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th>@Html.DisplayNameFor(model => model.DoctorName)</th>
                <th>@Html.DisplayNameFor(model => model.Specialty)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.DoctorName)</td>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.Specialty)</td>
                    <td class="text-center">
                        <a asp-action="UpdateDoctor" asp-route-id="@item.DoctorId" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="GetDoctor" asp-route-id="@item.DoctorId" class="btn btn-info btn-sm">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                        <a asp-action="DeleteDoctor" asp-route-id="@item.DoctorId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this doctor?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


















