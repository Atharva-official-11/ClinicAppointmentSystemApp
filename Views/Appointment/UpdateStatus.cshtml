@{
    ViewBag.Title = "Update Appointment Status";

}

<h2>Update Appointment Status</h2>

<!-- Display the current status -->
<p><strong>Current Status:</strong> @ViewBag.CurrentStatus</p>

<!-- Form to update the status -->
<form asp-action="UpdateStatus" method="post">
    <input type="hidden" name="id" value="@ViewBag.AppointmentId" /> <!-- Pass the appointment ID -->
    <div class="form-group">
        <label for="status">Select New Status:</label>
        <select name="status" class="form-control">
            <option value="Scheduled">Scheduled</option>
            <option value="Completed">Completed</option>
            <option value="Canceled">Canceled</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mb-3 mt-3">Update Status</button>
</form>

<!-- Link to go back to the appointment list -->
<a asp-action="Index" class="btn btn-secondary">Back to List</a>