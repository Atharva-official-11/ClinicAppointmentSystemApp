@{
    ViewBag.Title = "Update Appointment Schedule and Status";
}

<h1 class="text-center text-primary">Update Appointment Schedule & Status</h1>

<div class="card shadow-lg p-4 mt-4">
    <div class="card-body">
        <h4 class="text-secondary">Current Appointment Details</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-4 fw-bold text-dark">Current Status:</dt>
            <dd class="col-sm-8">
                <span class="badge bg-@(ViewData["CurrentStatus"]?.ToString() == "Confirmed" ? "success"
                    : ViewData["CurrentStatus"]?.ToString() == "Scheduled" ? "primary" : "danger")">
                    @ViewData["CurrentStatus"]
                </span>
            </dd>

            <dt class="col-sm-4 fw-bold text-dark">Current Appointment Date:</dt>
            <dd class="col-sm-8 text-muted">
                @ViewData["CurrentAppointmentDate"]
            </dd>
        </dl>

        <h4 class="text-secondary mt-4">Update Appointment</h4>
        <hr />

        <form asp-action="UpdateStatusAndTime" method="post">
            <input type="hidden" name="id" value="@ViewBag.AppointmentId" />

            <div class="mb-3">
                <label for="status" class="form-label fw-bold">Select New Status:</label>
                <select name="status" class="form-control">
                    <option value="Scheduled">Scheduled</option>
                    <option value="Completed">Completed</option>
                    <option value="Canceled">Canceled</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="appointmentDate" class="form-label fw-bold">Select New Appointment Date:</label>
                <input type="datetime-local" name="appointmentDate" class="form-control" value="@ViewBag.CurrentAppointmentDate" />
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="GetAppointments" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Update Schedule & Status
                </button>
            </div>
        </form>
    </div>
</div>








<style>



    .btn-primary {
        background: linear-gradient(to right, #1c88c6, #da1f34);
        color: white;
    }

        .btn-primary:hover {
            background: linear-gradient(to right, #da1f34, #1c88c6);
            transform: scale(1.05);
        }

    .btn-warning:hover, .btn-info:hover {
        transform: scale(1.05);
    }

</style>












